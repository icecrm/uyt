enable_defaults!

# Required, these must be set in env
variable :CONSUMER_KEY, :string
variable :CONSUMER_SECRET, :string
variable :ACCESS_TOKEN, :string
variable :ACCESS_TOKEN_SECRET, :string
variable :WORDNIK_KEY, :string
variable :EVERY_WORD_WORD, :string

# Default values
variable :HAS_DICTIONARY_DEF, :boolean, default: 'true'
variable :INCLUDE_PART_OF_SPEECH, :string, default: ''
variable :EXCLUDE_PART_OF_SPEECH, :string, default: 'proper-noun'
variable :MIN_CORPUS_COUNT, :integer, default: '5000'
variable :MAX_CORPUS_COUNT, :integer, default: '-1'
variable :MIN_DICTIONARY_COUNT, :integer, default: '1'
variable :MAX_DICTIONARY_COUNT, :integer, default: '-1'
variable :MIN_LENGTH, :integer, default: '3'
variable :MAX_LENGTH, :integer, default: '-1'